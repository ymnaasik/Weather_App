<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98FF98"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Details"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- EditText for inputting city name -->
    <EditText
        android:id="@+id/editCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter city name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textHeading"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Button to fetch weather data -->
    <Button
        android:id="@+id/btnFetchWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Weather"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#1E90FF"
        android:layout_below="@id/editCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- TextViews for displaying weather information -->
    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/btnFetchWeather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Time: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textTemperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textHumidity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- TextView for displaying address -->
    <TextView
        android:id="@+id/textAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/textWeatherDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />


</RelativeLayout>
